@{
    ViewData["Title"] = "Doctor";
}

<div class="container mt-5 mb-2">
    <div class="row">
        <!-- Appointments List -->
        <div class="col-12 mb-4">
            <div class="rounded pb-0">
                <!-- Title -->
                <h4 class="text-uppercase mb-4">List of Appointments</h4>

                <div class="row justify-content-end">
                    <div class="col-12 col-md-3">
                        <div class="input-group mb-4">
                            <span class="input-group-text text-muted" id="gender-icon">
                                <i class="fas fa-sort"></i>
                            </span>
                            <select class="form-select" name="gender" aria-describedby="gender-icon">
                                <option value="All" selected>All</option>
                                <option value="Approved">Approved </option>
                                <option value="Pending">Pending</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Tbale -->
                <div class="table-responsive-md">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Patient</th>
                                <th scope="col">Date</th>
                                <th scope="col">Time</th>
                                <th scope="col" class="text-center">Status</th>
                                <th scope="col" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>Mark Simons</td>
                                <td>December 15, 2021</td>
                                <td>8:00 AM</td>
                                <td class="text-center" title="Approved" data-bs-toggle="tooltip" data-bs-placement="bottom">
                                    <i class="fas fa-circle text-success"></i>
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-outline-primary btn-sm rounded-pill" data-bs-toggle="modal" data-bs-target="#checkingModal">
                                        Check
                                        <i class="fas fa-check-circle"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">2</th>
                                <td>Jacob Scott</td>
                                <td>December 16, 2021</td>
                                <td>11:00 AM</td>
                                <td class="text-center" title="Pending" data-bs-toggle="tooltip" data-bs-placement="bottom">
                                    <i class="fas fa-circle text-warning"></i>
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-outline-primary btn-sm rounded-pill" data-bs-toggle="modal" data-bs-target="#checkingModal">
                                        Check
                                        <i class="fas fa-check-circle"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">3</th>
